<form class="form" action="/users/{{user.id}}?_method=PUT" method="POST" style="width: 100%;"
  enctype="multipart/form-data">

  <div class="form-label-group">
    <label for="inputEmail">Name</label>
    <input type="text" name="name" class="form-control" placeholder="name" required autofocus value="{{user.name}}">
  </div>
  <div class="form-group">
    <label for="image">Image</label>
    <input type="file" class="form-control-file" id="image" name="image" value="{{user.image}}">

  </div>
  <br />
  <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>


</form>